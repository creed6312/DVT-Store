<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:id="@+id/view">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/basketImage"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:textAppearance="?attr/textAppearanceListItem" />

        </RelativeLayout>

        <View
            android:id="@+id/basketItemCardDivider"
            style="@style/DividerVertical"
            android:layout_marginLeft="150dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="155dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="15dp"
                android:textColor="@android:color/black"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/idListPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemTitle"
                android:paddingLeft="5dp"
                android:paddingBottom="6dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idDetailQuantity"
                android:layout_width="51dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="42dp"
                android:layout_marginTop="22dp"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatActionMinus"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="85dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/minus"
                app:backgroundTint="@android:color/holo_blue_light" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatActionPlus"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/plus"
                app:backgroundTint="@android:color/holo_blue_light" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="CHECKOUT"
        android:id="@+id/checkoutButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FDBB30"/>

</RelativeLayout>