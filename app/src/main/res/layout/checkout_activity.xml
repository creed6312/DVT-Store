<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/checkoutCard"
        android:layout_width="310dp"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="4dp"
        android:layout_centerHorizontal="true"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtcheckOut"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:padding="15dp"
                android:textColor="@color/colorPrimary"
                android:text="Your Order was Successful"/>

            <TextView
                android:layout_below="@+id/txtcheckOut"
                android:id="@+id/txtCheckOutID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="21sp"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:textColor="@color/colorDvtYellow"
                android:text="ID"/>

            <TextView
                android:layout_below="@+id/txtCheckOutID"
                android:id="@+id/txtCheckOutTotal"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:paddingBottom="20dp"
                android:textColor="@color/colorDvtYellow"
                android:text="Total Cost"/>

            <TextView
                android:layout_below="@id/txtCheckOutTotal"
                android:id="@+id/txtCheckOutCount"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="@color/colorDvtYellow"
                android:text="Total Items"/>

            <ImageView android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/txtCheckOutCount"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tick">
            </ImageView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnCheckOutDone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:background="@color/colorDvtYellow"
        android:text="Done"/>
</RelativeLayout>