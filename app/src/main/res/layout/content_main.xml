<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    custom:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jhb.dvt.dvt_store.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/idFeatured"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:text="Featured Products"
        android:textColor="#FDBB30"
        android:textStyle="bold"
        android:padding="2dp"
        android:textSize="18sp" />

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_below="@id/idFeatured"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="175dp"/>

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider"
        android:gravity="center_horizontal"
        custom:shape="oval"
        custom:selected_drawable="@drawable/dvt_vector_logo"
        custom:selected_padding_left="5dp"
        custom:selected_padding_right="5dp"
        custom:unselected_color="#55333333"
        custom:unselected_padding_left="5dp"
        custom:unselected_padding_right="5dp"
        custom:unselected_padding_top="2dp"
        custom:unselected_width="6dp"
        custom:unselected_height="6dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

</RelativeLayout>
